{% extends('common/base_list.twig') %}

{% block title %}
	Eラーニングカテゴリ一覧
{% endblock %}

{% block main %}
	<div id="list-area">
		<div id="main-area">
			<table class="menu-area-contents u-menu cf">
				{% for key, item in list %}
					<tr>
						<td><a href="{{ base_url }}ati/AtiContentList/content_list/{{ key }}" class="contents_btn">{{ item.btn_name }}</a></td>
						<td class="detail"><span>{{ item.detail }}</span></td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
{% endblock %}